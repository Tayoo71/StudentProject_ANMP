<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nama Mobil (Make dan Model) -->
        <TextView
            android:id="@+id/tvCarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"/>

        <!-- Tahun dan Warna -->
        <TextView
            android:id="@+id/tvCarYearColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year - Color"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>

        <!-- Harga -->
        <TextView
            android:id="@+id/tvCarPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"/>

        <!-- Fitur Mobil -->
        <TextView
            android:id="@+id/tvCarFeatures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Features: Bluetooth, Backup Camera, Keyless Entry"
            android:textSize="14sp"
            android:textColor="@android:color/black"/>

        <!-- Spesifikasi Mobil -->
        <TextView
            android:id="@+id/tvCarSpecs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specs: Engine, Transmission, Fuel Type"
            android:textSize="14sp"
            android:textColor="@android:color/black"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
